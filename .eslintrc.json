{
    "env": {
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "script"
    },
    "rules": {
        "radix": ["error", "as-needed"],
        "indent": ["error", 4],
        "semi": [2, "always"],
        "max-len": [2, 160, 2],
        "no-continue": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "no-minusminus": "off",
        "linebreak-style": 0,
        "global-require": 0,
        "eslint linebreak-style": [0, "error", "windows"]
    }
}
